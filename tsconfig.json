{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "jsx": "react",
    "noImplicitThis": true,
    "target": "es6",
    "strictNullChecks": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "noLib": false,
    "skipLibCheck": true,
    "incremental": true,
  },
  "lib": [
    "ES2017"
  ],
  "include": [
    "src/**/*.ts",
    "src/bootstrap.ts.deprecated"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "./src/types"
  ]
}